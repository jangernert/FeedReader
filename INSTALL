//+++++++++++++++++++++++++++++++++++++++
// Needed Packages
//+++++++++++++++++++++++++++++++++++++++

build-essential
cmake
vala (>=0.26)
pkg-config
libgirepository1.0-dev
libgtk-3-dev (>= 3.12)
libsoup2.4-dev
libjson-glib-dev
libwebkit2gtk-4.0-dev (or the old api version 3.0)
libsqlite3-dev
libsecret-1-dev
libnotify-dev
libxml2-dev
libunity-dev (optional)
librest-dev
libgee-0.8-dev


//+++++++++++++++++++++++++++++++++++++++
// Compiling
//+++++++++++++++++++++++++++++++++++++++

mkdir build
cd build
cmake -DCMAKE_INSTALL_PREFIX=/usr ..
make -j 1
sudo make install
