twitter_resources = gnome.compile_resources(
  'twitter',
  'twitter.gresource.xml'
)

shared_library(
  'Twitter',
  [
    'TwitterAPI.vala',
    'TwitterForm.vala',
    'TwitterSetup.vala'
  ],
  twitter_resources,
  c_args: c_args,
  vala_args: vala_args,
  dependencies: [
    libpeas,
    gtk,
    gee,
    libsecret,
    sqlite3,
    libsoup,
    webkit2gtk,
    libxml,
    rest,
    json_glib,
    feedreader
  ],
  install: true,
  install_dir: SHARE_PLUGINS_DIR
)

install_data(
  [
    'org.gnome.feedreader.share.twitter.gschema.xml'
  ],
  install_dir: join_paths(SHARE_DIR, 'glib-2.0/schemas')
)
